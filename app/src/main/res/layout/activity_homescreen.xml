<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/send"
        android:layout_alignBottom="@+id/TransferAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <EditText
        android:id="@+id/TransferAmount"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Transfer Amount"
        android:inputType="numberDecimal"
        android:layout_below="@+id/spinner1"
        android:layout_alignRight="@+id/RecipientName"
        android:layout_alignEnd="@+id/RecipientName"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:layout_below="@+id/RecipientName"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_marginTop="30dp" />



    <TextView
        android:id="@+id/RecipientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="'Recipient Name'"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/TransferAmount"
        android:layout_alignStart="@+id/TransferAmount"
        android:layout_alignRight="@+id/TransferAmount"
        android:layout_alignEnd="@+id/TransferAmount"
        android:spinnerMode="dropdown" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profilepic"
        android:layout_above="@+id/RecipientName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/tappicon"/>

</RelativeLayout>