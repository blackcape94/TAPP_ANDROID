<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/classic_join" >

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text=""
        android:textColor="@android:color/holo_red_light"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/signupWithfb"
        android:layout_width="300sp"
        android:layout_height="41sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="256dp"
        android:background="@mipmap/join_facebook" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/RegisterButton"
        android:layout_alignBottom="@+id/RegisterButton"
        android:layout_alignLeft="@+id/signupWithfb"
        android:background="@mipmap/boarder"
        android:gravity="center"
        android:text="Sign in"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/signupWithfb"
        android:layout_below="@+id/signupWithfb"
        android:layout_marginTop="15dp"
        android:background="@mipmap/boarder"
        android:text="Join with Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/Terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LoginButton"
        android:layout_alignRight="@+id/RegisterButton"
        android:layout_below="@+id/LoginButton"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="By joining you indicate that you have read and agree to the Terms of Service"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

</RelativeLayout>
